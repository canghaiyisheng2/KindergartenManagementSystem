
@{
    ViewData["Title"] = "EnterDetail";
}

@using KindergartenManagementSystem.Models
@model KindergartenManagementSystem.Models.EnterModels.Enter_Request

<div class="container" style="width:60vw; margin-top:4vh; font-size:1.2vw">
    <h2 style="margin-bottom:3vh;">入托申请详情</h2>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Pro_id"></label>
            @Model.Pro_id
        </div>
        <div class="col-md-6 col-sm-6">
            <label asp-for="Status"></label>
            @if (Model.Status == 0)
            {
                <span>待审核</span>
            }
            else if (Model.Status == 1)
            {
                <span>已完成</span>
            }
            else
            {
                <span>已终止</span>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Starter"></label>
            @Model.Starter
        </div>
        <div class="col-md-6 col-sm-6">
            <label asp-for="Approver"></label>
            @Model.Approver
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Child_Id"></label>
            @Model.Child_Id
        </div>
        <div class="col-md-6 col-sm-6">
            <label asp-for="Name"></label>
            @Model.Name
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Birthday"></label>
            @Model.Birthday
        </div>
        <div class="col-md-6 col-sm-6">
            <label asp-for="Sex"></label>
            @if (Model.Sex)
            {
                <span>男</span>
            }
            else
            {
                <span>女</span>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Gua_name"></label>
            @Model.Gua_name
        </div>
        <div class="col-md-6 col-sm-6">
            <label asp-for="Gua_phone"></label>
            @Model.Gua_phone
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Home_addr"></label>
            @Model.Home_addr
        </div>
        <div class="col-md-6 col-sm-6">
            <label asp-for="Cla"></label>
            @Model.Cla
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Suggest"></label>
        </div>
    </div>

    @if (Model.Status == 0 && ViewBag.auth == "teacher")
    {
        <form role="form" method="post" enctype="multipart/form-data" asp-action="Approve" asp-route-id="@Model.Pro_id">
            <textarea class="form-control" rows="10" name="suggest"></textarea>
            <div class="form-group">
                <label for="result"></label>
                <label class="radio-inline">
                    <input type="radio" name="result" id="result" value=true checked> 接受
                </label>
                <label class="radio-inline">
                    <input type="radio" name="result" id="result" value=false> 拒绝
                </label>
            </div>
            <button type="submit" class="btn btn-default">提交</button>
        </form>
    }
    else
    {
        @Model.Suggest
    }

</div>





