
@{
    ViewData["Title"] = "EnterDetail";
}

@using KindergartenManagementSystem.Models
@model KindergartenManagementSystem.Models.EnterModels.Enter_Request

<div class="container" style="width:60vw; margin-top:4vh; font-size:1.2vw">
    <h2 style="margin-bottom:3vh;">入托申请详情</h2>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Pro_id"></label>123
        </div>
        <div class="col-md-6 col-sm-6">
            <label asp-for="Status"></label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Starter"></label>
        </div>
        <div class="col-md-6 col-sm-6">
            <label asp-for="Approver"></label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Child_Id"></label>
        </div>
        <div class="col-md-6 col-sm-6">
            <label asp-for="Name"></label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Birthday"></label>
        </div>
        <div class="col-md-6 col-sm-6">
            <label asp-for="Sex"></label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Gua_name"></label>
        </div>
        <div class="col-md-6 col-sm-6">
            <label asp-for="Gua_phone"></label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Home_addr"></label>
        </div>
        <div class="col-md-6 col-sm-6">
            <label asp-for="Cla"></label>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <label asp-for="Suggest"></label>
        </div>
    </div>
   
    <form role="form" method="post" enctype="multipart/form-data" asp-action="Approve">
        <textarea class="form-control" rows="10"></textarea>
        <div class="form-group">
            <label for="result"></label>
            <label class="radio-inline">
                <input type="radio" name="result" id="result" value=true checked> 接受
            </label>
            <label class="radio-inline">
                <input type="radio" name="result" id="result" value=false> 拒绝
            </label>
        </div>
        <button type="submit" class="btn btn-default">提交</button>
    </form>
</div>





