
@{
    ViewData["Title"] = "EnterForm";
}

@using KindergartenManagementSystem.Models
@model KindergartenManagementSystem.Models.EnterModels.Enter_Request

<div class="container" style="width:60vw; margin-top: 4vh;">

    <h2 style="margin-bottom:3vh;">入托申请表</h2>

    <form role="form" method="post" enctype="multipart/form-data" asp-action="EnterForm">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" id="name">
            <span asp-validation-for="Name" class="err-msg"></span>
        </div>
        <div class="form-group">
            <label asp-for="Sex"></label>
            <label class="radio-inline">
                <input type="radio" name="sex" value=true checked> 男
            </label>
            <label class="radio-inline">
                <input type="radio" name="sex" value=false> 女
            </label>
            <span asp-validation-for="Sex" class="err-msg"></span>
        </div>
        <div class="form-group">
            <label asp-for="Birthday"></label>
            <input type="text" class="form-control" id="birth">
            <span asp-validation-for="Birthday" class="err-msg"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gua_name"></label>
            <input type="text" class="form-control" id="gua-name">
            <span asp-validation-for="Gua_name" class="err-msg"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gua_phone"></label>
            <input type="text" class="form-control" id="gua-phone">
            <span asp-validation-for="Gua_phone" class="err-msg"></span>
        </div>
        <div class="form-group">
            <label asp-for="Home_addr"></label>
            <input type="text" class="form-control" id="home-addr">
            <span asp-validation-for="Home_addr" class="err-msg"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cla"></label>
            <input type="text" class="form-control" id="class">
            <span class="err-msg" asp-validation-for="Cla"></span>
        </div>
        <button type="submit" class="btn btn-default">提交</button>
    </form>
</div>
