
@{
    ViewData["Title"] = "Create";
}
@using KindergartenManagementSystem.Models
@model KindergartenManagementSystem.Models.Medical

<div class="container" style="width:60vw; margin-top: 5vh;">
    <h2 style="margin-bottom:9vh;">添加就医信息</h2>
    <form role="form" method="post" enctype="multipart/form-data" asp-action="Create">
        <div class="form-group">
            <label asp-for="name"></label>
            <input type="text" class="form-control" name="name">
            <span asp-validation-for="name" class="err-msg"></span>
        </div>
        <div class="form-group">
            <label asp-for="sex"></label>
            <label class="radio-inline">
                <input type="radio" name="sex" value=true checked> 男
            </label>
            <label class="radio-inline">
                <input type="radio" name="sex" value=false> 女
            </label>
            <span asp-validation-for="sex" class="err-msg"></span>
        </div>
        <div class="form-group">
            <label asp-for="birth"></label>
            <div class="input-group">
                <input type='text' class="form-control datetimepicker" name="birth" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            <span asp-validation-for="birth" class="err-msg"></span>
        </div>
        <div class="form-group">
            <label asp-for="class_id"></label>
            <input type='text' class="form-control" name="class_id"/>
            <span asp-validation-for="class_id" class="err-msg"></span>
        </div>
        <div class="form-group">
            <label asp-for="Med_date"></label>
            <div class="input-group">
                <input type="text" class="form-control datetimepicker" name="Med_date" >
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            <span asp-validation-for="Med_date" class="err-msg"></span>
        </div>
        <div class="form-group">
            <label asp-for="out_place"></label>
            <input type="text" class="form-control" name="out_place">
            <span asp-validation-for="out_place" class="err-msg"></span>
        </div>
        <div class="form-group">
            <label asp-for="home_addr"></label>
            <input type="text" class="form-control" name="home_addr">
            <span asp-validation-for="home_addr" class="err-msg"></span>
        </div>
        <button type="submit" class="btn btn-info">提交</button>
    </form>
</div>

<link rel="stylesheet" href="~/lib/bootstrtap-datetimepicker/bootstrap-datepicker.min.css" />
<script src="~/lib/bootstrtap-datetimepicker/moment.min.js"></script>
<script src="~/lib/bootstrtap-datetimepicker/bootstrap-datepicker.min.js"></script>
<script src="~/lib/bootstrtap-datetimepicker/bootstrap-datepicker.zh-CN.min.js"></script>
<script>$('.datetimepicker').datepicker({
        language: "zh-CN",
        format: 'yy/MM/dd',
        clearBtn: true,
        autoclose: true,
    });</script>