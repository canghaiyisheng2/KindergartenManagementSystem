<h1 class="h1">
    请假申请
</h1>
<div class="thinContainer">
    <form class="form-horizontal">
        <div class="form-group">
            <label for="fromTime" class="col-sm-2 control-label">请假开始时间</label>
            <div class="col-sm-10">
                <input class="form-control" id="fromTime" placeholder="格式：2020-01-01">
            </div>
        </div>
        <div class="form-group">
            <label for="toTime" class="col-sm-2 control-label">请假结束时间</label>
            <div class="col-sm-10">
                <input class="form-control" id="toTime" placeholder="格式：2020-01-01">
            </div>
        </div>
        <div class="form-group">
            <label for="location" class="col-sm-2 control-label">前往地点</label>
            <div class="col-sm-10">
                <input class="form-control" id="location" placeholder="示例：陕西西安长安区西安电子科技大学">
            </div>
        </div>
        <div class="form-group">
            <label for="reason" class="col-sm-2 control-label">请假原因</label>
            <div class="col-sm-10">
                <input class="form-control" id="reason" placeholder="病假/事假/其他">
            </div>
        </div>
        <!--提交-->
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">申请请假</button>
            </div>
        </div>
    </form>
</div>